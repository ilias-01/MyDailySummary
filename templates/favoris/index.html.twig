{% extends 'layouts/base.html.twig' %}

{% block title %}Articles favoris{% endblock %}
{% block body %}
<div class='container'>
    <h3 class="text-center"> Vos articles favoris</h3>
                        {% for article in articles %}
                            <div class="card my-4">
                                <div class="card-body">
                                    <h5 class="card-title my-5"><a href="{{ article.link }}">{{ article.title }}</a></h5>
                                    <h6 class="card-subtitle mb-2 text-muted">
                                    {{ article.pubDate | date("d/m/Y") }}<br>
                                    <a href="?article_search%5Bcategory%5D={{ article.category }}&article_search%5Btitle%5D=#">{{ article.category }}</a> 
                                    </h6>
                                    <p class="card-text">
                                        {{ article.description }}
                                    </p>
                                </div>
                            </div> 
                        {% endfor %} 
<div>   
{% endblock %}